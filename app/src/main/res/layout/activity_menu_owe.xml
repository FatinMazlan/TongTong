<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fatin.myapplication.OweActivity">

    <Button
        android:id="@+id/payable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:width="200dp"
        android:background="@color/colorPrimary"
        android:gravity="left"
        android:text="PAYABLE"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorTertiary"
        android:textColorHighlight="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20sp" />

    <Button
        android:id="@+id/receivable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/payable"
        android:width="200dp"
        android:background="@color/colorPrimary"
        android:gravity="right"
        android:text="RECEIVABLE"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/payable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payable"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/transparent"
        android:drawableBottom="@android:color/transparent"
        android:foregroundTint="@android:color/transparent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/payable"
        android:layout_marginTop="13dp"
        android:height="40dp"
        android:gravity="left"
        android:text="You owe Farahin RM 10 for GrabCar"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <Button
        android:id="@+id/payable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payable1"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/transparent"
        android:gravity="left" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/payable2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="left"
        android:text="You owe Aina RM 30 for Sunway Lagoon Ticket"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

</RelativeLayout>